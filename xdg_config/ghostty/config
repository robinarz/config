# Blank lines are ignored!

keybind = ctrl+z=close_surface
keybind = ctrl+tab=next_tab
keybind = ctrl+shift+tab=previous_tab
keybind = super+shift+r=reload_config

gtk-titlebar = false
gtk-tabs-location = bottom
gtk-wide-tabs = false

# Empty values reset the configuration for the default value

# font-family = Berkeley Mono
font-family = Berkeley Mono Condensed
font-family-bold = Berkeley Mono Bold Condensed
font-family-italic = Berkeley Mono Condensed Oblique

# The syntax is "key = value". The whitespace around the equals doesn't matter.
background = 111111
foreground = e0e0e0

# Colors can be changeed by setting the 16 colors of 'palette', which each color
# being defined as regular and bold.
#
# black
palette = 0=#1d2021
palette = 8=#7c6f64
# red
palette = 1=#cc241d
palette = 9=#fb4934
# green
palette = 2=#98971a
palette = 10=#b8bb26
# yellow
palette = 3=#d79921
palette = 11=#fabd2f
# blue
palette = 4=#458588
palette = 12=#83a598
# purple
palette = 5=#b16286
palette = 13=#d3869b
# aqua
palette = 6=#689d6a
palette = 14=#8ec07c
# white
palette = 7=#a89984
palette = 15=#fbf1c7

cursor-style = block

# Misc
shell-integration-features = no-cursor
